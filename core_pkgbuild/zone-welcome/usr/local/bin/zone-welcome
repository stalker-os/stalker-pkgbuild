#!/usr/bin/env bash

## Welcome / Autostart app for The Zone 

DIR='/usr/share/zone/src'
stdbuf -oL -eL yad  --width='900' --height='500' --borders=0 --center \
					--title='Welcome' \
					--window-icon=zone-logo \
					--no-buttons --no-escape \
                                        --html --uri="$DIR/index.html" \
                                        --print-uri 2>&1 \
| while read -r line; do
	case ${line##*/} in
		run1)
                notify-send -u low "Launching Calamares..." \
                            --icon="/usr/share/zone.png" && calinstall 
                ;;
        run2)
                notify-send -u low "Launching Calamares (Debug Mode)..." \
                            --icon="/usr/share/zone.png" && calinstall-debug 
                ;;
		*)		   echo "No URI" ;;
	esac
done
