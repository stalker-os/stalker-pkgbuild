# Maintainer: Gabriel Matthews <matthewriel63@gmail.com>
pkgname=zone-bspwm
_pkgname=zone-bspwm
_destname1="/etc/skel/.config/"
pkgver=1.0
pkgrel=1
pkgdesc="BSPWM Configurations for The Zone"
arch=('x86_64')
url="https://github.com/zone-linux/zone-bspwm"
license=('MIT')
depends=(bspwm sxhkd polybar)
makedepends=('git')
provides=("${pkgname}")
options=(!strip !emptydirs)
source=("git+$url.git")
sha256sums=('SKIP')

package() {
	install -dm755 ${pkgdir}${_destname1}
	cp -r ${srcdir}/${_pkgname}${_destname1}* ${pkgdir}${_destname1}
}
