# Maintainer: Gabriel Matthews <matthewriel63@gmail.com>

pkgname=zone-scripts
_pkgname=zone-scripts
_destname1="/usr/local/bin"
pkgver=1.0
pkgrel=1
pkgdesc="System Scipts for The Zone"
arch=('x86_64')
url="https://github.com/zone-linux/zone-scripts"
license=('MIT')
makedepends=(git)
provides=(${pkgname})
options=(!strip !emptydirs)
source=(${_pkgname}::"git+$url.git")
md5sums=('SKIP')

package() {
    install -dm755 ${pkgdir}${_destname1}
    cp -rf ${_pkgname}${_destname1}/* ${pkgdir}${_destname1}
}
