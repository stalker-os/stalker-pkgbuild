# Maintainer: Gabriel Matthews <matthewriel63@gmail.com>

pkgname="movies-dl"
pkgver=r80.3146776
pkgrel=1
pkgdesc="The python program that lets you download movies for free."
arch=('x86_64')
url="https://github.com/Kungger-git/movies-dl"
license=('GPL3')
depends=('qbittorrent' 'qbittorrent-nox')
makedepends=('git')
source=("$pkgname::git+$url.git")
md5sums=('SKIP')
install='post.install'

pkgver() {
    cd "$srcdir/${pkgname}"
    printf "r%s.%s" "$(git rev-list --count HEAD)" "$(git rev-parse --short HEAD)"
}

package() {
    python3 -m pip install -r ${srcdir}/${pkgname}/requirements.txt
    
    install -dm755 ${pkgdir}/usr/share/
    cp -rf ${srcdir}/${pkgname} ${pkgdir}/usr/share/
}
