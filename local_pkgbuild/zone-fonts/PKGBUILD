# Maintainer: Gabriel Matthews <matthewriel63@gmail.com>

pkgname=zone-fonts
_pkgname=zone-fonts
_destname1="/etc/skel/.local/share/"
pkgver=1.0
pkgrel=1
pkgdesc="Fonts for The Zone"
arch=('x86_64')
url="https://github.com/zone-linux/zone-pkgbuild/local_pkgbuild/zone-fonts"
license=('MIT')
provides=("${pkgname}")
options=(!strip !emptydirs)

package() {
    install -dm755 ${pkgdir}${_destname1}
    cp -rf ../fonts/ ${pkgdir}${_destname1}
}
