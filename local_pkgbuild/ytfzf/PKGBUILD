# Maintainer: Gabriel Matthews <matthewriel63@gmail.com>

pkgname=ytfzf
pkgver=2.0
pkgrel=3
pkgdesc="A posix script to find and watch youtube videos from the terminal. (Without API)"
arch=('any')
url="https://github.com/pystardust/ytfzf"
license=('GPL3')
depends=('jq' 'mpv' 'youtube-dl' 'fzf' 'yt-dlp' 'ueberzug')
makedepends=('git')
optdepends=(
    'dmenu: use dmenu for search prompts and results'
    'rofi:  use rofi for search prompts and results'
)
source=("${pkgname}::git+$url.git")
md5sums=('SKIP')

package() {
    install -dm755 ${pkgdir}/usr/bin/
    install -Dm755 ${srcdir}/${pkgname}/ytfzf ${pkgdir}/usr/bin/
}
