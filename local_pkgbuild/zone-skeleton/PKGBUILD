# Maintainer: Gabriel Matthews <matthewriel63@gmail.com>

pkgname=zone-skeleton
_pkgname=zone-skeleton
_destname1="/etc/skel/"
pkgver=1.0
pkgrel=1
pkgdesc="Dotfiles of The Zone"
arch=('x86_64')
url="https://github.com/zone-linux/zone-skeleton"
license=('MIT')
makedepends=(git)
provides=(${pkgname})
options=(!strip !emptydirs)
source=(${_pkgname}::"git+$url.git")
md5sums=('SKIP')

package() {
    install -dm755 ${pkgdir}${_destname1}
    cp -lr ${srcdir}/${_pkgname}${_destname1}.* ${pkgdir}${_destname1}
    rm -rf ${pkgdir}${_destname1}/"skel"
}
